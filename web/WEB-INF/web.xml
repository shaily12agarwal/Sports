<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>Db_Driver</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>Connection_String</param-name>
        <param-value>jdbc:mysql://localhost:3306/club_reserve_db</param-value>
    </context-param>
    <context-param>
        <param-name>Db_Uid</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>Db_Password</param-name>
        <param-value>root</param-value>
    </context-param>
    <servlet>
        <servlet-name>ClubSignupServlet</servlet-name>
        <servlet-class>com.universal.servlet.ClubSignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MemberServlet</servlet-name>
        <servlet-class>com.universal.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MemberSignupServlet</servlet-name>
        <servlet-class>com.universal.servlet.MemberSignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FeedbackServlet</servlet-name>
        <servlet-class>com.universal.servlet.FeedbackServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FeedbacksServlet</servlet-name>
        <servlet-class>com.universal.servlet.FeedbacksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmailVerifierServlet</servlet-name>
        <servlet-class>com.universal.servlet.EmailVerifierServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotPassword</servlet-name>
        <servlet-class>com.universal.servlet.ForgotPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.universal.servlet.AdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditServlet</servlet-name>
        <servlet-class>com.universal.servlet.EditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteClub</servlet-name>
        <servlet-class>com.universal.servlet.DeleteClub</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClubSignupServlet</servlet-name>
        <url-pattern>/clubsignup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MemberServlet</servlet-name>
        <url-pattern>/member</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MemberSignupServlet</servlet-name>
        <url-pattern>/MemberSignupServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FeedbackServlet</servlet-name>
        <url-pattern>/FeedbackServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FeedbacksServlet</servlet-name>
        <url-pattern>/FeedbacksServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmailVerifierServlet</servlet-name>
        <url-pattern>/email</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPassword</servlet-name>
        <url-pattern>/forgot</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/AdminServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditServlet</servlet-name>
        <url-pattern>/EditServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteClub</servlet-name>
        <url-pattern>/DeleteClub</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
